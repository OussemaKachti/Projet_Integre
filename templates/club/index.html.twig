
{% extends 'base.html.twig' %}

{% block body %}
<main>
    <!-- breadcrumb area start -->
    <section class="breadcrumb__area include-bg pt-150 pb-150 breadcrumb__overlay" data-background="{{ asset('front_assets/img/clubsA.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="breadcrumb__content text-center p-relative z-index-1">
                        <h3 class="breadcrumb__title">Our Clubs</h3>
                        <div class="breadcrumb__list">
                            <span><a href="#">Home</a></span>
                            <span class="dvdr"><i class="fa-regular fa-angle-right"></i></span>
                            <span>Clubs</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->

    <!-- course area start -->
    <section class="course__area pt-115 pb-90 grey-bg-3">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="course__tab-inner white-bg mb-50">
                        <div class="row align-items-center">
                            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                <div class="course__tab-wrapper d-flex align-items-center">
                                    <div class="course__tab-btn">
                                        <ul class="nav nav-tabs" id="courseTab" role="tablist">
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link active" id="grid-tab" data-bs-toggle="tab" data-bs-target="#grid" type="button" role="tab" aria-controls="grid" aria-selected="true">
                                                    <svg class="grid" viewBox="0 0 24 24">
                                                        <rect x="3" y="3" class="st0" width="7" height="7"/>
                                                        <rect x="14" y="3" class="st0" width="7" height="7"/>
                                                        <rect x="14" y="14" class="st0" width="7" height="7"/>
                                                        <rect x="3" y="14" class="st0" width="7" height="7"/>
                                                    </svg>
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="course__view">
                                        <h4>Showing 1 - 6</h4>
                                    </div>
                                </div>
                            </div>

                <!-- create club button -->
                            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                <div class="course__sort d-flex justify-content-sm-end">
                                    <div class="course__sort-inner">
                                        <a href="{{ path('app_club_new') }}" class="tp-btn join-button" style="display: flex; align-items: center; justify-content: center; width: 100%; text-decoration: none; color: white;">
                                            Create club
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
<!-- end of create club button -->

<!-- start of the clubs cards -->
            <div class="row" style="display: flex; flex-wrap: wrap; align-items: stretch;">
               
                <!-- Carte 1 : Lion Club -->
                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6" style="display: flex;">
                    <div class="course__item-2 transition-3 white-bg mb-30 fix" style="display: flex; flex-direction: column; width: 100%;">
                        <div class="course__thumb-2 w-img fix">
                            <a href="#">
                                <img src="{{ asset('front_assets/img/lion.jpg') }}" alt="Lion Club" style="width: 100%; height: 200px; object-fit: cover; border-radius: 10px;">
                            </a>
                        </div>
                        <div class="course__content-2 p-20" style="flex: 1; display: flex; flex-direction: column;">
                            <h3 class="course__title-2" style="font-size: 24px; color: #333; margin-bottom: 15px;">
                                <a href="{{ path('clubdetail') }}">Lion Club</a>
                            </h3>
                            <p style="font-size: 16px; color: #555; line-height: 1.6; margin-bottom: 20px; flex: 1;">
                                Serving communities with compassion, unity, and a commitment to global impact.
                            </p>
                            <div class="course__bottom-2 d-flex align-items-center justify-content-between">
                                <div class="course__action">
                                    <ul style="list-style: none; padding: 0; margin: 0;">
                                        <li>
                                            <div class="course__action-item d-flex align-items-center">
                                                <div class="course__action-icon mr-5">
                                                    <span>
                                                        <!-- Score Icon -->
                                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="#5F6160" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                        </svg>
                                                    </span>
                                                </div>
                                                <div class="course__action-score">
                                                    <span style="font-weight: bold; color: #5F6160;">1522</span>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Carte 2 : IEEE -->
                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6" style="display: flex;">
                    <div class="course__item-2 transition-3 white-bg mb-30 fix" style="display: flex; flex-direction: column; width: 100%;">
                        <div class="course__thumb-2 w-img fix">
                            <a href="#">
                                <img src="{{ asset('front_assets/img/IEEE.jpg') }}" alt="IEEE" style="width: 100%; height: 200px; object-fit: cover; border-radius: 10px;">
                            </a>
                        </div>
                        <div class="course__content-2 p-20" style="flex: 1; display: flex; flex-direction: column;">
                            <h3 class="course__title-2" style="font-size: 24px; color: #333; margin-bottom: 15px;">
                                <a>IEEE</a>
                            </h3>
                            <p style="font-size: 16px; color: #555; line-height: 1.6; margin-bottom: 20px; flex: 1;">
                                Empowering future engineers through innovation, collaboration, and excellence.
                            </p>
                            <div class="course__bottom-2 d-flex align-items-center justify-content-between">
                                <div class="course__action">
                                    <ul style="list-style: none; padding: 0; margin: 0;">
                                        <li>
                                            <div class="course__action-item d-flex align-items-center">
                                                <div class="course__action-icon mr-5">
                                                    <span>
                                                        <!-- Score Icon -->
                                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="#5F6160" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                        </svg>
                                                    </span>
                                                </div>
                                                <div class="course__action-score">
                                                    <span style="font-weight: bold; color: #5F6160;">1222</span>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Carte 3 : Enactus -->
                <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6" style="display: flex;">
                    <div class="course__item-2 transition-3 white-bg mb-30 fix" style="display: flex; flex-direction: column; width: 100%;">
                        <div class="course__thumb-2 w-img fix">
                            <a href="#">
                                <img src="{{ asset('front_assets/img/Enactus.png') }}" alt="Enactus" style="width: 100%; height: 200px; object-fit: cover; border-radius: 10px;">
                            </a>
                        </div>
                        <div class="course__content-2 p-20" style="flex: 1; display: flex; flex-direction: column;">
                            <h3 class="course__title-2" style="font-size: 24px; color: #333; margin-bottom: 15px;">
                                <a>Enactus</a>
                            </h3>
                            <p style="font-size: 16px; color: #555; line-height: 1.6; margin-bottom: 20px; flex: 1;">
                                Transforming ideas into action to create sustainable change in communities.
                            </p>
                            <div class="course__bottom-2 d-flex align-items-center justify-content-between">
                                <div class="course__action">
                                    <ul style="list-style: none; padding: 0; margin: 0;">
                                        <li>
                                            <div class="course__action-item d-flex align-items-center">
                                                <div class="course__action-icon mr-5">
                                                    <span>
                                                        <!-- Score Icon -->
                                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="#5F6160" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                                        </svg>
                                                    </span>
                                                </div>
                                                <div class="course__action-score">
                                                    <span style="font-weight: bold; color: #5F6160;">1422</span>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



<div class="row">
    {% for club in clubs %}
        <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6" style="display: flex;">
            <div class="course__item-2 transition-3 white-bg mb-30 fix" style="display: flex; flex-direction: column; width: 100%;">
                
                <div class="course__thumb-2 w-img fix">
                    <a href="#">
                        {% if club.image %}
                            <img src="{{ asset('uploads/' ~ club.image) }}" alt="" 
                                 style="width: 100%; height: 200px; object-fit: cover; border-radius: 10px;">
                        {% else %}
                            <img src="file:///C:/Users/YourUsername/Pictures/myimage.jpg" alt="Local Image">
                        {% endif %}
                    </a>
                </div>

                <div class="course__content-2 p-20" style="flex: 1; display: flex; flex-direction: column;">
                    <h3 class="course__title-2" style="font-size: 24px; color: #333; margin-bottom: 15px;">
                        <a>{{ club.nomC }}</a>
                    </h3>
                    <p style="font-size: 16px; color: #555; line-height: 1.6; margin-bottom: 20px; flex: 1;">
                        {{ club.description }}
                    </p>
                    <div class="course__bottom-2 d-flex align-items-center justify-content-between">
                        <div class="course__action-item d-flex align-items-center">
                            <div class="course__action-icon mr-5">
                                <span>
                                    <!-- Score Icon -->
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="#5F6160" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </span>
                            </div>
                            <div class="course__action-score">
                                <span style="font-weight: bold; color: #5F6160;">{{ club.points }}</span>
                            </div>
                        </div>
                        <a href="{{ path('app_participation_membre_new', {'clubId': club.id}) }}" 
                           class="btn btn-primary" 
                           style="background-color: #007bff; border: none; color: #fff; padding: 5px 10px; border-radius: 5px; text-decoration: none; font-size: 14px;">
                            Participate
                        </a>
                    </div>
                </div>
            </div>
        </div>
    
</div>
    {% else %}
        <p>No clubs available yet!</p>
    {% endfor %}
</div>  



            

            <!-- Pagination -->
            <div class="row">
                <div class="col-xxl-12">
                    <div class="basic-pagination">
                        <nav class="pagination-container">
                            <ul class="pagination-controls">
                                <li>
                                    <a href="#">
                                        <i class="far fa-angle-left"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">1</a>
                                </li>
                                <li>
                                    <span class="current">2</span>
                                </li>
                                <li>
                                    <a href="#">3</a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="far fa-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- course area end -->

    
</main>
{% endblock %}