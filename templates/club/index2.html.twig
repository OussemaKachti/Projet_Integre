{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary">Gestion des Clubs</h2>
            <a href="{{ path('app_club_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Créer un nouveau club
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Image</th>
                        <th>Points</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for club in clubs %}
                    <tr>
                        <td>{{ club.id }}</td>
                        <td><strong>{{ club.nomC }}</strong></td>
                        <td>{{ club.description|slice(0, 50) ~ '...' }}</td>
                        <td>
                            <span class="badge {% if club.status.value == 'Actif' %}bg-success{% else %}bg-danger{% endif %}">
                                {{ club.status.value }}
                            </span>
                        </td>
                        <td>
                            <img src="{{ asset('uploads/clubs/' ~ club.image) }}" alt="{{ club.nomC }}" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;">
                        </td>
                        <td><span class="badge bg-warning text-dark">{{ club.points }}</span></td>
                        <td>
                            <a href="{{ path('app_club_show', {'id': club.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_club_delete', {'id': club.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-edit"></i> Delete
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">Aucun club trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
