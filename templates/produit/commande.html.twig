{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<!-- breadcrumb area start -->
         <section class="breadcrumb__area include-bg pt-150 pb-150 breadcrumb__overlay" data-background="https://img.freepik.com/premium-photo/background-shopping_931878-79292.jpg">
            <div class="container">
               <div class="row">
                  <div class="col-xxl-12">
                     <div class="breadcrumb__content text-center p-relative z-index-1">
                        <h3 class="breadcrumb__title">My Cart</h3>
                        <div class="breadcrumb__list">
                           <span><a href="index.html">Home</a></span>
                           <span class="dvdr"><i class="fa-regular fa-angle-right"></i></span>
                           <span>Cart</span>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </section>
         <!-- breadcrumb area end -->

         <!-- cart-area start -->
         <section class="cart-area pt-120 pb-120">
            <div class="container">
               <div class="row">
               {% for produit in produits %}
                  <div class="col-12">
                        <form action="#">
                           <div class="table-content table-responsive">
                              <table class="table">
                                    <thead>
                                       <tr>
                                          <th class="product-thumbnail">image</th>
                                          <th class="cart-product-name">name</th>
                                          <th class="product-quantity">name club</th>
                                          <th class="product-price">price</th>
                                          <th class="product-quantity">Quantity</th>
                                          <th class="product-remove">Remove</th>
                                       </tr>
                                    </thead>
                                    <tbody>
                                       <tr>
                                          <td class="product-thumbnail"><a href="course-details.html"><img src="https://th.bing.com/th/id/OIP.jzNV4d-xQqYp6jo_m3ScUAHaHa?rs=1&pid=ImgDetMain" alt=""></a></td>
                                          <td class="product-name"><a href="course-details.html">{{ produit.nomProd }}</a></td>
                                          <td class="product-club"><span class="amount">{{ produit.club.nomC }}</span></td>
                                          <td class="product-price"><span class="amount">{{ produit.prix }}TND</span></td>
                                          <td class="product-quantity">
                                                <div class="cart-plus-minus"><input type="text" value="1"><div class="dec qtybutton">-</div><div class="inc qtybutton">+</div><div class="dec qtybutton">-</div><div class="inc qtybutton">+</div></div>
                                          </td>
                                          
                                          <td class="product-Edit">
                                             <a class="tp-btn btn-create" href="checkout_edit.html">Remove</a></td>
                                       </tr>
                                       
                                    </tbody>
                              </table>
                           </div>
                           <div class="row">
                              <div class="col-12">
                                    <div class="coupon-all">
                                       
                                       <div class="coupon2">
                                          <button class="tp-btn" name="update_cart" type="submit">Update</button>
                                       </div>
                                       <div class="cart-page-total">
                                       
                                          <a class="tp-btn" href="checkout1.html">Confirm Order</a>
                                       </div>
                                    </div>
                              </div>
                           </div>
                           <div class="row justify-content-end">
                              <div class="col-md-5">
                                    
                              </div>
                           </div>
                        </form>
                  </div>
               </div>
               {% endfor %}
            </div>
         </section>
         <!-- cart-area end -->
{% endblock %}