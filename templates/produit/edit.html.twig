{% extends 'base.html.twig' %}

{% block title %}Edit Produit{% endblock %}

{% block body %}
    <section class="checkout-area pb-85">
        <div class="container">
            <h1 class="mb-4">Edit Produit</h1>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

            <div class="row">
                <div class="col-lg-6">
                    <div class="checkbox-form">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Nom du produit <span class="required">*</span></label>
                                    {{ form_widget(form.nomProd, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.nomProd, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Description <span class="required">*</span></label>
                                    {{ form_widget(form.descProd, {'attr': {'class': 'form-control', 'id': 'descProd'}}) }}
                                    {{ form_errors(form.descProd, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Prix</label>
                                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.prix, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Quantité <span class="required">*</span></label>
                                    {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.quantity, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Image <span class="required">*</span></label>
                                    {{ form_widget(form.imgProd, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.imgProd, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Créé le <span class="required">*</span></label>
                                    {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.createdAt, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Club <span class="required">*</span></label>
                                    {{ form_widget(form.club, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.club, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="checkout-form-list text-center mt-4">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to list</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
