{% block javascripts %}
    {{ parent() }}
    <!-- Include SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        {% if not app.user %}
            // SÃ©lectionner les Ã©lÃ©ments spÃ©cifiques
            const protectedElements = document.querySelectorAll(`
                .tp-btn,                          /* Find Clubs button */
                .course__title-2 a,               /* AIESEC and Lions descriptions */
                .tp-btn-5.tp-btn-7,              /* View Events buttons */
                .nav-link[data-bs-toggle="tab"],  /* Category tabs */
                [href="clubs.html"],              /* Explore Clubs link */
                .event__more a                    /* View Events links */
            `);
            
            protectedElements.forEach(element => {
                element.addEventListener('click', function(e) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Authentication Required',
                        text: 'Please sign in to access this feature',
                        icon: 'info',
                        showCancelButton: true,
                        confirmButtonText: 'Sign In',
                        cancelButtonText: 'Cancel',
                        customClass: {
                            confirmButton: 'btn btn-primary',
                            cancelButton: 'btn btn-secondary'
                        }
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '{{ path("app_login") }}';
                        }
                    });
                });
            });
        {% endif %}
    });
    </script>

    <style>
    .swal2-popup {
        border-radius: 15px;
    }
    .swal2-confirm {
        background-color: #4B49AC !important;
    }
    .swal2-cancel {
        background-color: #6c757d !important;
    }
    </style>
