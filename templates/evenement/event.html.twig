{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<main>
  <style>
    /* Type d'√©v√©nement */
    .open-event {
        background-color: #28a745; /* Vert */
        color: white;  /* Texte blanc pour la lisibilit√© */
        padding: 5px 10px;  /* Ajouter un peu de padding */
        border-radius: 5px;  /* Arrondir les coins */
    }

    .closed-event {
        background-color: #dc3545; /* Rouge */
        color: white;  /* Texte blanc pour la lisibilit√© */
        padding: 5px 10px;  /* Ajouter un peu de padding */
        border-radius: 5px;  /* Arrondir les coins */
    }

    .fas.fa-lock {
        margin-right: 5px;  /* Espacement entre l'ic√¥ne et le texte */
    }

    .fas.fa-unlock {
        margin-right: 5px;  /* Espacement entre l'ic√¥ne et le texte */
    }

    /* Am√©lioration de la pagination */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    
    
</style>


    <!-- breadcrumb area start -->
    <section class="breadcrumb__area include-bg pt-150 pb-150 breadcrumb__overlay"
        data-background="{{ asset('front_assets/img/event/eventpage.png') }}">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="breadcrumb__content text-center p-relative z-index-1">
                        <h3 class="breadcrumb__title">Event</h3>
                        <div class="breadcrumb__list">
                            <span><a href="index.html">Home</a></span>
                            <span class="dvdr"><i class="fa-regular fa-angle-right"></i></span>
                            <span>Event</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->

    <!-- event area start -->
    <section class="event__area pt-115">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="section__title-wrapper-2 text-center mb-60">
                        <span class="section__title-pre-2">Upcoming Events</span>
                        <h3 class="section__title-2">Join our upcoming event</h3>
                    </div>
                </div>
            </div>
             <form method="get" class="mb-4" id="searchForm">
    <div class="row">
        <!-- Recherche par nom -->
        <div class="col-md-4">
            <input type="text" name="search" class="form-control" placeholder="Search event..." value="{{ app.request.get('search') }}">
        </div>
        
        <!-- Filtrer par type -->
        <div class="col-md-3">
            <select name="type" class="form-control">
                <option value="">All Types</option>
                <option value="open" {% if app.request.get('type') == 'open' %}selected{% endif %}>Open</option>
                <option value="closed" {% if app.request.get('type') == 'closed' %}selected{% endif %}>Closed</option>
            </select>
        </div>

        <!-- Filtrer par date -->
        <div class="col-md-3">
            <input type="date" name="date" class="form-control" value="{{ app.request.get('date') }}">
        </div>

        <!-- Bouton Rechercher -->
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary" style="background-color: #003366; border-color: #003366;">
                Rechercher
            </button>
        </div>
    </div>
</form>

             <div class="d-flex justify-content-between align-items-center mt-5">
               <div class="text-center">
                  <h4 class="mb-3">Want to organize an amazing event? üéâ</h4>
                  <p class="mb-4">Click below to create your event and engage your community!</p>
               </div>
               <a href= {{ path('app_evenement_new')}} class="btn btn-primary btn-lg add-event-btn" style="background-color: #003366; border-color: #003366;">
                  Add Event
               </a>
            </div>
            <div class="row">
                {% for evenement in evenements %}
                    <div class="col-xxl-12">
                        <div class="event__item white-bg mb-10 transition-3 p-relative d-lg-flex align-items-center justify-content-between">
                            <div class="event__left d-sm-flex align-items-center">
                                <div class="event__date">
                                    <!-- Affichage de la date de d√©but -->
                                    <h4>{{ evenement.startDate|date('d') }}</h4>
                                    <p>{{ evenement.startDate|date('F, Y') }}</p>
                                    <!-- Affichage de la date de fin si elle existe -->
                                    {% if evenement.endDate %}
                                        <p><strong>Fin : </strong>{{ evenement.endDate|date('d F, Y') }}</p>
                                    {% endif %}
                                </div>
                                
                                <div class="event__content">
                                    <div class="event__meta">
                                        <ul>
                                            <li>
                                                <a href="#"><svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M8.49992 9.51253C9.72047 9.51253 10.7099 8.52308 10.7099 7.30253C10.7099 6.08198 9.72047 5.09253 8.49992 5.09253C7.27937 5.09253 6.28992 6.08198 6.28992 7.30253C6.28992 8.52308 7.27937 9.51253 8.49992 9.51253Z" stroke="#5F6160" stroke-width="1.5"/>
                                                    <path d="M2.56416 6.01334C3.95958 -0.120822 13.0475 -0.113738 14.4358 6.02043C15.2504 9.61876 13.0121 12.6646 11.05 14.5488C9.62625 15.9229 7.37375 15.9229 5.94291 14.5488C3.98791 12.6646 1.74958 9.61168 2.56416 6.01334Z" stroke="#5F6160" stroke-width="1.5"/>
                                                </svg>
                                                {{ evenement.lieux }}</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <h3 class="event__title">
                                        <a href="{{ path('eventdetails', {'id': evenement.id}) }}">{{ evenement.nomEvent }}</a>
                                    </h3>
                                    <div class="event__person-type">
                                        <div class="event__person">
                                            <ul>
                                                <li>
                                                    <a href="#">
                                                       Nom du Club : <span class="event__person-name">{{ evenement.club.nomClub }}</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <span class="event-type {% if evenement.type == 'closed' %}closed-event{% else %}open-event{% endif %}">
                                            <i class="fas {% if evenement.type == 'closed' %}fa-lock{% else %}fa-unlock{% endif %}"></i>
                                            {{ evenement.type|capitalize }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="event__right d-sm-flex align-items-center">
                                <div class="event__time">
                                    <!-- Affichage de l'heure -->
                                    <span>{{ evenement.startDate|date('h:i A') }} - {{ evenement.endDate|date('h:i A') }}</span>
                                </div>
                                <div class="event__more ml-30">
                                    <a href="{{ path('eventdetails', {'id': evenement.id}) }}" class="tp-btn-5 tp-btn-7">View Event</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
    </section>
   




{# Affichage de la pagination #}
<div class="pagination-container">
    {{ knp_pagination_render(evenements, 'custom_template.html.twig') }}
</div>





 <script>
    // Intercepter la soumission du formulaire
    document.getElementById('searchForm').addEventListener('submit', function(event) {
        event.preventDefault();  // Emp√™cher la soumission du formulaire classique

        // R√©cup√©rer les valeurs des champs du formulaire
        let search = document.querySelector('input[name="search"]').value;
        let type = document.querySelector('select[name="type"]').value;
        let date = document.querySelector('input[name="date"]').value;

        // Construire l'URL de l'API avec les param√®tres de la requ√™te
        let url = `/api/events?search=${search}&type=${type}&date=${date}`;

        // Appeler l'API
        fetch(url)
            .then(response => response.json())
            .then(data => {
                // R√©cup√©rer le conteneur d'√©v√©nements
                const eventsContainer = document.querySelector('.row');
                eventsContainer.innerHTML = '';  // Vider les √©v√©nements existants

                // Ajouter les √©v√©nements filtr√©s dans le conteneur
                data.forEach(event => {
                    const eventElement = document.createElement('div');
                    eventElement.classList.add('col-xxl-12');
                    eventElement.innerHTML = `
                        <div class="event__item white-bg mb-10 transition-3 p-relative d-lg-flex align-items-center justify-content-between">
                            <div class="event__left d-sm-flex align-items-center">
                                <div class="event__date">
                                    <h4>${new Date(event.startDate).getDate()}</h4>
                                    <p>${new Date(event.startDate).toLocaleDateString()}</p>
                                    ${event.endDate ? `<p><strong>Fin : </strong>${new Date(event.endDate).toLocaleDateString()}</p>` : ''}
                                </div>
                                <div class="event__content">
                                    <h3 class="event__title">
                                        <a href="/eventdetails/${event.id}">${event.nomEvent}</a>
                                    </h3>
                                    <span class="event-type ${event.type === 'closed' ? 'closed-event' : 'open-event'}">
                                        ${event.type.charAt(0).toUpperCase() + event.type.slice(1)}
                                    </span>
                                </div>
                            </div>
                            <div class="event__right">
                                <span>${new Date(event.startDate).toLocaleTimeString()} - ${new Date(event.endDate).toLocaleTimeString()}</span>
                            </div>
                        </div>
                    `;
                    eventsContainer.appendChild(eventElement);
                });
            })
            .catch(error => console.error('Erreur lors de la r√©cup√©ration des √©v√©nements:', error));
    });
</script>


</main>
{% endblock %}
