{% extends 'base.html.twig' %}

{% block title %}Create a New Event{% endblock %}

{% block body %}
<main>

    <!-- breadcrumb area start -->
    <section class="breadcrumb__area include-bg pt-150 pb-150 breadcrumb__overlay" data-background="{{ asset('front_assets/img/breadcrumb/event.png') }}">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="breadcrumb__content text-center p-relative z-index-1">
                        <h3 class="breadcrumb__title">Event</h3>
                        <div class="breadcrumb__list">
                            <span><a href="{{ asset('index.html') }}">Home</a></span>
                            <span class="dvdr"><i class="fa-regular fa-angle-right"></i></span>
                            <span>Create Event</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->

    <!-- Event Creation Area Start -->
    <section class="event__area pt-115">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="section__title-wrapper-2 text-center mb-60">
                        <span class="section__title-pre-2">Create New Event</span>
                        <h3 class="section__title-2">Organize Your Event</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xxl-12">

                    <!-- Afficher les messages flash -->
                    {% for label, messages in app.flashes %}
                        <div class="alert alert-{{ label }}">
                            {% for message in messages %}
                                <p>{{ message }}</p>
                            {% endfor %}
                        </div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="event__form white-bg p-30 transition-3">

                        <div class="row">
                            <!-- Event Name -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.nomEvent) }}
                                    {{ form_widget(form.nomEvent, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.nomEvent) }}
                                </div>
                            </div>

                            <!-- Event Description -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.descEvent) }}
                                    {{ form_widget(form.descEvent, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.descEvent) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Event Location -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.lieux) }}
                                    {{ form_widget(form.lieux, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.lieux) }}
                                </div>
                            </div>

                            <!-- Event Type -->
                            <div class="col-md-6">
                                {{ form_row(form.type) }}
                            </div>
                        </div>

                        <div class="row">
                            <!-- Event Start Date -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.startDate) }}
                                    {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.startDate) }}
                                </div>
                            </div>

                            <!-- Event End Date -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.endDate) }}
                                    {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.endDate) }}
                                </div>
                            </div>
                        </div>

                        <!-- Event Image (Image Description) -->
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                {{ form_label(form.imageDescription) }}
                                {{ form_widget(form.imageDescription, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.imageDescription) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.club) }}
                            {{ form_widget(form.club, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.club) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.categorie) }}
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.categorie) }}
                           <a href="{{ path('app_categorie_index') }}" class="btn btn-success" target="_blank">
    Ajouter une autre cat√©gorie
</a>

                        </div>

                        <div class="form-group mb-3">
                            <button type="submit" class="tp-btn-5 tp-btn-7 w-100">Create Event</button>
                        </div>

                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <!-- Event Creation Area End -->

</main>

{% block stylesheets %}
    <style>
        /* Espacement horizontal entre les options de type */
        .form-group .form-check {
            display: inline-block; /* Affichage horizontal des boutons radio */
            margin-right: 20px; /* Espacement entre les options */
        }

        .form-group .form-check input[type="radio"] {
            margin-right: 5px; /* Espacement entre le bouton radio et le texte */
        }

        .form-group label {
            display: block; /* Afficher les labels au-dessus des champs */
            margin-bottom: 5px; /* Espace entre le label et le champ */
        }

        .form-control {
            width: 100%; /* Assurer que les champs prennent toute la largeur */
        }
    </style>
{% endblock %}

{% endblock %}
