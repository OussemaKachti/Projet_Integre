{# templates/security/access_denied.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied - UNICLUBS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .access-denied-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }
        
        .access-denied-card {
            max-width: 500px;
            width: 90%;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .access-denied-header {
            background-color: #2b4eff;
            color: white;
            padding: 20px;
            text-align: center;
        }
        
        .access-denied-body {
            padding: 30px;
            text-align: center;
        }
        
        .lock-icon {
            font-size: 80px;
            margin-bottom: 20px;
            color: #2b4eff;
        }
        
        .action-buttons {
            margin-top: 30px;
        }
        
        .login-btn {
            background-color: #2b4eff;
            border-color: #2b4eff;
            padding: 10px 30px;
            font-weight: 500;
        }
        
        .login-btn:hover {
            background-color: #1e3ad6;
            border-color: #1e3ad6;
        }
        
        .home-btn {
            padding: 10px 30px;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="access-denied-card">
            <div class="access-denied-header">
                <h2>Access Denied</h2>
            </div>
            <div class="access-denied-body">
                <div class="lock-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h3>Authentication Required</h3>
                <p class="mt-3">You need to be logged in to access this content. Please sign in to continue.</p>
                <div class="action-buttons">
                    <a href="{{ path('app_login') }}" class="btn btn-primary login-btn">Login Now</a>
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary home-btn mt-2 mt-md-0">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>