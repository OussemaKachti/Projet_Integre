{% extends 'base.html.twig' %}


{% block body %}
<section class="checkout-area pb-85">
    <div class="container">
        <form action="#">
            <div class="row">
                <div class="col-lg-6">
                    <div class="your-order mb-30">
                        <h3>Your order</h3>
                        <div class="your-order-table table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-name">Product</th>
                                        <th class="product-total">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in commande.orderDetails %}
                                    <tr class="cart_item">
                                        <td class="product-name">
                                            {{ item.produit ? item.produit.nomProd : 'Produit inconnu' }} 
                                            <strong class="product-quantity"> Ã— {{ item.quantity }}</strong>
                                        </td>
                                        <td class="product-total">
                                            <span class="amount">${{ item.total|number_format(2, '.', ',') }}</span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    
                                    <tr class="order-total">
                                        <th>Order Total</th>
                                        <td><strong><span class="amount">${{ commande.getTotal()|number_format(2, '.', ',') }}</span></strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="order-button-payment mt-20">
                            <button type="submit" class="tp-btn">Receive mail</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- checkout-area end -->
{% endblock %}
