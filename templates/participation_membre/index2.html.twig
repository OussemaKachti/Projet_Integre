{% extends 'base.html.twig' %}



{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary fw-bold">📋 Members list</h1>

    {% if participation_membres is empty %}
        <div class="alert alert-warning text-center fw-bold">🚨 Aucun participation_membres pour le moment.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered shadow-lg rounded">
                <thead class="bg-primary text-white text-center">
                    <tr>
                        <th class="py-3">👤 Nom</th>
                        <th class="py-3">📧 Email</th>
                        <th class="py-3">📞 Phone Number</th>
                        <th class="py-3">🏛 Club</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    {% for participation_membres in participation_membres %}
                        <tr class="align-middle">
                            <td class="fw-bold">{{ participation_membres.user.nom }}</td>
                            <td>{{ participation_membres.user.email }}</td>
                            <td>{{ participation_membres.user.tel }}</td>
                            <td class="text-uppercase fw-bold">{{ participation_membres.club.nomC }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}