<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Comment</th>
            <th>Club</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for commentaire in commentaires %}
        <tr>
            <td>{{ commentaire.user.nom }} {{ commentaire.user.prenom }}</td>
            <td>{{ commentaire.contenuComment }}</td>
            <td>{{ commentaire.sondage.club.nomC }}</td>
            <td>{{ commentaire.dateComment|date('Y-m-d') }}</td>
            <td>
                <form method="post" action="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5" class="text-center">No comments found</td>
        </tr>
    {% endfor %}
    </tbody>
</table> 