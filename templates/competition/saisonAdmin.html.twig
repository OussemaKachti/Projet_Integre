{% extends 'baseAdmin.html.twig' %}

{% block title %}Seasons{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <!-- Seasons Title and Add Season Button -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title">Seasons</h4>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSeasonModal">
                            <i class="mdi mdi-plus"></i> Add Season
                        </button>
                    </div>

                    <!-- Season Cards (Listed Vertically) -->
                    <div class="season-list">
                        <!-- Season 1 -->
                        <div class="season-item white-bg mb-4 transition-3 p-relative d-lg-flex align-items-center justify-content-between" style="background-color: #f8f9fa; border-radius: 10px;">
                            <div class="season-left d-sm-flex align-items-center">
                                <div class="season-icon spring-icon mr-20">
                                    <i class="fa-solid fa-seedling fa-2x"></i>
                                </div>
                                <div class="season-content">
                                    <h3 class="season-title">Spring Sprint</h3>
                                    <p class="season-description">
                                        Kick off the competition with fresh energy! Complete missions to grow your club's impact.
                                    </p>
                                    <!-- Duration Moved Here -->
                                    <div class="season-duration mt-2">
                                        <span class="badge bg-primary">2 Weeks</span>
                                    </div>
                                </div>
                            </div>
                            <div class="season-right d-sm-flex align-items-center">
                                <div class="season-actions ml-20">
                                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editSeasonModal">
                                        <i class="mdi mdi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="mdi mdi-delete"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Season 2 -->
                        <div class="season-item white-bg mb-4 transition-3 p-relative d-lg-flex align-items-center justify-content-between" style="background-color: #f8f9fa; border-radius: 10px;">
                            <div class="season-left d-sm-flex align-items-center">
                                <div class="season-icon winter-icon mr-20">
                                    <i class="fa-solid fa-snowflake fa-2x"></i>
                                </div>
                                <div class="season-content">
                                    <h3 class="season-title">Winter Warriors</h3>
                                    <p class="season-description">
                                        Brave the cold and prove your club's resilience. Earn points by completing challenging missions.
                                    </p>
                                    <!-- Duration Moved Here -->
                                    <div class="season-duration mt-2">
                                        <span class="badge bg-primary">1 Month</span>
                                    </div>
                                </div>
                            </div>
                            <div class="season-right d-sm-flex align-items-center">
                                <div class="season-actions ml-20">
                                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editSeasonModal">
                                        <i class="mdi mdi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="mdi mdi-delete"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- Add more seasons as needed -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Season Modal -->
    <div class="modal fade" id="addSeasonModal" tabindex="-1" aria-labelledby="addSeasonModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSeasonModalLabel">Add Season</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close