				<script>
function toggleSubmenu(element) { // Fermer tous les autres sous-menus
document.querySelectorAll('.menu-section').forEach(section => {
if (section !== element.parentElement) {
section.classList.remove('open');
}
});

// Toggle le sous-menu actuel
element.parentElement.classList.toggle('open');
}

document.addEventListener('DOMContentLoaded', function () { // Marquer le menu actif basé sur l'URL courante
const currentPath = window.location.pathname;
const menuItems = document.querySelectorAll('.submenu-item');

menuItems.forEach(item => {
if (item.getAttribute('href') === currentPath) {
item.classList.add('active');
const parentSection = item.closest('.menu-section');
if (parentSection) {
parentSection.classList.add('open');
}
}
});

// Si c'est la page Users Management
if (currentPath === '{{ path('app_admin_dashboard') }}') {
document.querySelector('a[href="    {{ path('app_admin_dashboard') }}"]').classList.add('active');
}
});

document.querySelector('.navbar-toggler').addEventListener('click', function () {
document.querySelector('.modern-sidebar').classList.toggle('show');
});
